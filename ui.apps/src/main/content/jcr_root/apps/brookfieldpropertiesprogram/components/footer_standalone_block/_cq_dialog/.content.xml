<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Footer Configuration"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <text
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">                                            
                                            <copyright
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Copyright"
                                                name="./copyrightText"/>
                                            <label
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Legal"
                                                value="&amp;copy; 2021 The Eugene, All Rights Reserved."
                                                name="./legalText"/>                                                                                 
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <socialLinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Social Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">                                            
                                            <social-links
                                                jcr:primaryType="nt:unstructured"
                                                composite="{Boolean}true"
                                                fieldLabel="Social Links"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./socialLinks">
                                                    <items
                                                        jcr:primaryType="nt:unstructured">
                                                        <icon
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Social Icon"
                                                            name="./icon"/>
                                                        <label
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Social Label"
                                                            name="./label"/>
                                                        <url
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"                                                            
                                                            fieldLabel="Social URL"
                                                            name="./url"/>  
                                                        <openInNewTab
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            uncheckedValue="false"
                                                            value="true"
                                                            text="Open Menu Link in new tab"
                                                            name="./openLinkInNewTab"/>                                                      
                                                    </items>
                                                </field>
                                            </social-links>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </socialLinks>
                    <menu
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Menu Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">                                            
                                            <mega-menu-links
                                                jcr:primaryType="nt:unstructured"
                                                composite="{Boolean}true"
                                                fieldLabel="Links"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./menuLinks">
                                                    <items
                                                        jcr:primaryType="nt:unstructured">
                                                        <label
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Menu Label"
                                                            name="./label"/>
                                                        <url
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                            rootPath="/content"
                                                            fieldLabel="Menu URL"
                                                            name="./url"/>
                                                        <openInNewTab
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            uncheckedValue="false"
                                                            value="true"
                                                            text="Open Menu Link in new tab"
                                                            name="./openLinkInNewTab"/>                                                        
                                                    </items>
                                                </field>
                                            </mega-menu-links>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </menu>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
